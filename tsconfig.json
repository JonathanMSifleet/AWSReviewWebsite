{
  "compilerOptions": {
    "baseUrl": "/",
    "experimentalDecorators": true,
    "lib": ["es2020", "dom"],
    "allowJs": true,
    "checkJs": false,
    "module": "commonjs",
    "target": "es2019",
    "strict": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "outDir": "lib",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "importHelpers": true
  },
  "include": ["./**/*.ts"],
  "exclude": [
    "./node_modules/**/*",
    "./.serverless/**/*",
    "./.webpack/**/*",
    "./_warmup/**/*",
    "./.vscode/**/*"
  ]
}
